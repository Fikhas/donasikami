<section id="write-article" class="write-article">
    <form action="/catalog/update-article-put" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_id" value="<%= blog._id %>">
        <div class="title">
            <label for="title">Judul Artikel</label>
            <input type="text" id="title" name="title" value="<%= blog.title %>">
        </div>
        <div class="image">
            <label for="image">Unggah Gambar</label>
            <div class="image-box">
                <img src="<%= blog.image %>" id="image-place" alt="Your Image">
                <input type="file" id="image" accept="image/*" onchange="loadFile(event)" name="image" required>
            </div>
        </div>
        <div class="article-place">
            <label for="article-box">Tulis Artikel</label>
            <div id="article-box"><%- blog.article %></div>
        </div>
        <button type="submit" class="btn btn-primary">Kirim</button>
    </form>
</section>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
    const quill = new Quill('#article-box', {
        theme: "snow"
    });
</script>