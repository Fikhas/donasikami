<section id="write-article" class="write-article">
    <h1>BUAT ARTIKEL</h1>
    <a href="/catalog/account">Kembali</a>
    <form action="/catalog/write" method="post" enctype="multipart/form-data">
        <div class="title">
            <label for="title">Judul Artikel</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="image">
            <label for="image">Unggah gambar</label>
            <div class="image-box">
                <img id="image-place" alt="Your Image">
                <input type="file" id="image" accept="image/*" onchange="loadFile(event)" name="image" required>
            </div>
        </div>
        <div class="article-place">
            <label for="article-box">Tulis Artikel</label>
            <textarea name="article" id="article-box"></textarea>
        </div>
        <button type="submit">Kirim</button>
    </form>
</section>

<script>
    const editor = new FroalaEditor("#article-box");
</script>