<section id="register" class="register">
    <h1>REGISTRASI AKUN</h1>
    <% if(typeof errors != "undefined") { %>
        <% errors.forEach(error=> { %>
            <p><%= error.msg %></p>
        <% }) %>
    <% } %>
    <form action="/catalog/register" method="POST">
        <div class="username item">
            <label for="username">Username</label>
            <input type="username" id="username" name="username" placeholder="Username" required>
        </div>
        <div class="email item">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="email" required>
        </div>
        <div class="password item">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="password" required>
        </div>
        <div class="passwordConfirm item">
            <label for="passwordConfirm">Konfirmasi Password</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" placeholder="Konfirmasi Password" required>
        </div>
        <button type="submit">Buat Akun</button>
    </form>
    <p>Sudah memiliki akun? <a href="/catalog/account">Masuk disini</a></p>
</section>